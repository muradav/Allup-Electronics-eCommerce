@model HomeVM
<!-- Slider Section -->
<section class="slider-area slider-active">
    @foreach (var item in Model.Sliders)
    {
        <div class="single-slider">
            <div class="slider-image">
                <img src="~/assets/@item.ImageUrl" alt="slider">
            </div>
            <div class="slider-content-wrapper">
                <div class="container-fluid custom-container">
                    <div class="slider-content">
                        <h4 data-animation="fadeInDown" data-delay="0.5s" class="sub-title">@item.DiscountSec</h4>
                        <h1 data-animation="fadeInLeft" data-delay="0.5s" class="main-title ">@item.Title</h1>
                        <p data-animation="fadeInRightBig" data-delay="0.5s">@item.Desc</p>
                        <a data-animation="zoomIn" data-delay="0.5s" class="main-btn " asp-controller="detail" asp-action="index" asp-route-id="@item.Id">Shop Now</a>
                    </div>
                </div>
            </div>
        </div>
    }
</section>
<!-- End Slider Section -->

