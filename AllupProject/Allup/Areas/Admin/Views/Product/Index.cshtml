@model List<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <h2 class="mb-2 page-title">Products</h2>
                        <div class="row my-4">
                            <!-- Small table -->
                            <div class="col-md-12">
                                <div class="card shadow">
                                    <div class="card-body">
                                        <!-- table -->
                                        <table class="table datatables" id="dataTable-1">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Name</th>
                                                    <th>Photo</th>
                                                    <th>Brand</th>
                                                    <th>Category</th>
                                                    <th>Stock</th>
                                                    <th>Price</th>
                                                    <th>Settings</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                <tr>
                                                    <td>@item.Id</td>
                                                    <td>@item.Name</td>
                                                    <td><img width="100" height="100" src="~/assets/@item.ProductImages.Find(i=>i.IsMain==true).ImageUrl" /></td>
                                                    <td>@item.Brand.Name</td>
                                                    <td>@item.Category.Name</td>
                                                    <td>@item.StockCount</td>
                                                    <td>@item.Price $</td>
                                                    <td>
                                                        <a  asp-action="update" asp-route-id="@item.Id"><button class="btn btn-warning btn-rounded btn-icon"><i style="font-size:16px" class="mdi mdi-tooltip-edit"></i></button></a>
                                                        <a asp-action="detail" asp-route-id="@item.Id"><button class="btn btn-info btn-rounded btn-icon"><i style="font-size:16px" class="mdi mdi-information-outline"></i></button></a>
                                                        <a asp-action="delete" asp-route-id="@item.Id"><button class="btn btn-danger btn-rounded btn-icon"><i style="font-size:16px" class="mdi mdi-delete"></i></button></a>
                                                    </td>
                                                </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div> <!-- simple table -->
                        </div> <!-- end section -->
                    </div> <!-- .col-12 -->
                </div> <!-- .row -->
            </div> <!-- .container-fluid -->

